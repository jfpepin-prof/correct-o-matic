@page "{id:int}"
@model LeCorrecteur.Pages.Grilles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer la grille</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grille.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grille.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grille.Cours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grille.Cours)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Grille.ID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
    <div class="mt-2">
        <a asp-page="/Grilles/Details" asp-route-id="@Model.Grille.ID">Annuler</a>
    </div>

</div>
