@page "{id:int}"
@model LeCorrecteur.Pages.Grilles.Competences.Create;

@{
    ViewData["Title"] = "Ajout compétence";
}

<h1>Ajouter une compétence</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Competence.Nom" class="control-label"></label>
                <input asp-for="Competence.Nom" class="form-control" />
                <span asp-validation-for="Competence.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competence.Description" class="control-label"></label>
                <textarea asp-for="Competence.Description" class="form-control"></textarea>
                <span asp-validation-for="Competence.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Competence.Ponderation" class="control-label"></label>
                <input asp-for="Competence.Ponderation" class="form-control" />
                <span asp-validation-for="Competence.Ponderation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Grilles/Details" asp-route-id="@Url.ActionContext.RouteData.Values["id"]">Annuler</a>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
